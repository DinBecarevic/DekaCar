<% if @models.present? %>
  <%= form_with(model: @oglas) do |f| %>
    <%= turbo_stream.replace "make_model_list" do %>

      <div id="make_model_list">
        <%= f.collection_select :car_model_id, @models.all, :id, :name, {prompt: "Model"}, {id: "car_model_id", class: "form-select form-select-light", name: "ad[car_model_id]"} %>
      </div>

    <% end %>
  <% end %>
<% end %>